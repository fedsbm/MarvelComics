<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_result_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/retry_image"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ooops" />

    <TextView
        android:id="@+id/retry_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retry_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="@string/retry_message"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />

    <Button
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/retry_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/retry_message"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button_accent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/colorIcons"
        android:text="@string/retry_button" />

</RelativeLayout>